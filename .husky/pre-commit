#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

npm run lint
npm run test

#!/bin/bash

# Protect master from accidental commits.
echo -e "===\n>>Pre-commit Hook:: Checking branch name."
branchName=$(git branch | grep '*' | sed 's/* //')

if [ $branchName == 'master' ]
then
  echo -e "\nðŸš« Commit directly to master branch is not allowed!" && exit 1
fi

if [ $branchName == 'main' ]
then
  echo -e "\nðŸš« Commit directly to master branch is not allowed!" && exit 1
fi

if [ $branchName == 'develop' ]
then
  echo -e "\nðŸš« Cannot push to remote develop branch, please create your own branch and use PR." && exit 1
fi

if [[ $branchName = *[![:ascii:]]* ]]
then
  echo -e "\nðŸš« Branch name should not have any ascii and upper case letters, please rename your branch name. \n" && exit 1
fi

if [[ $branchName =~ [A-Z] ]]
then
  echo -e "\nðŸš« Branch name should not have any ascii and upper case letters, please rename your branch name. \n" && exit 1
fi

echo -e ">> Finish checking branch name.\n==="

exit 0